@model IEnumerable<RIESGOS_Y_RESPUESTAS.Models.Riesgo>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">
    <div class="col-lg-4 align-content-center ">
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="successAlert" class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
</div>

<h1 class="text-center my-4">registro de riesgos</h1>


<div class="d-flex justify-content-between mb-4">
    
    <h3>riesgos</h3>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus"></i> Crear Nuevo
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered text-center w-100">
        <thead class="table-dark">
            <tr>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.Nombre)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.NivelAmenaza)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.AreaMunicipalidad)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.Daños)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.EstadoRiesgo)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.TipoRiesgo)</th>
                <th class="text-nowrap" style="width: 15%;">@Html.DisplayNameFor(model => model.Impacto)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="text-nowrap">@item.GetNivelAmenazaDescription()</td>
                    <td class="text-nowrap">@Html.DisplayFor(modelItem => item.AreaMunicipalidad)</td>
                    <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Daños)</td>
                    <td class="text-nowrap">@item.GetEstadoRiesgoDescription()</td>
                    <td class="text-nowrap">@Html.DisplayFor(modelItem => item.TipoRiesgo)</td>
                    <td class="text-nowrap">@item.GetImpactoDescription()</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Idreportes" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Idreportes" class="btn btn-sm btn-info">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Idreportes" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>