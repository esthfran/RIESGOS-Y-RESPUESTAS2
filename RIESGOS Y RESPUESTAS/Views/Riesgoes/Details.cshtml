@model RIESGOS_Y_RESPUESTAS.Models.Riesgo

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="mt-5 text-center">Detalles</h1>
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <h4 class="card-title mb-4">
                <i class="fas fa-info-circle me-2"></i> Informacion de registro
            </h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NivelAmenaza)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NivelAmenaza)  - @Model.GetNivelAmenazaDescription()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Detalles)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Detalles)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AreaMunicipalidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AreaMunicipalidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Daños)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Daños)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstadoRiesgo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstadoRiesgo) - @Model.GetEstadoRiesgoDescription()
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoRiesgo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoRiesgo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Impacto)
                </dt>
                <dd class="col-sm-10">
                    @Model.GetImpactoDescription()
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Idreportes" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Volver a la lista
        </a>
    </div>
</div>
