@model RIESGOS_Y_RESPUESTAS.Models.Riesgo

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center mt-4">Formulario Registro de Riesgos</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Tarjeta moderna con sombra -->
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Crear Nuevo Registro de Riesgos</h2>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row">
                            <!-- Primera Columna -->
                            <div class="col-md-6">

                                <!--nombre-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                        <input asp-for="Nombre" class="form-control rounded-end" />
                                    </div>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <!--detalles-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="Detalles" class="form-label">Detalles</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-info-circle text-muted"></i></span>
                                        <textarea asp-for="Detalles" class="form-control" rows="3" placeholder="Describe el riesgo en detalle"></textarea>
                                    </div>
                                    <span asp-validation-for="Detalles" class="text-danger"></span>
                                </div>

                                <!--daños-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="Daños" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-heartbreak"></i></span>
                                        <input asp-for="Daños" class="form-control rounded-end" />
                                    </div>
                                    <span asp-validation-for="Daños" class="text-danger"></span>
                                </div>

                                <!--nivel amenaza-->
                                <div class="form-group mb-md-4">
                                    <label asp-for="NivelAmenaza" class="form-label">
                                        <i class="bi bi-exclamation-triangle ms-2"></i>
                                        Nivel de Amenaza
                                    </label>
                                    <div class="d-flex flex-column">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="me-2"></span>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="NivelAmenaza" class="form-check-input" type="radio" name="NivelAmenaza" id="nivel1" value="1">
                                                <label asp-for="NivelAmenaza" class="form-check-label" for="nivel1">1 - Muy Bajo</label>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="me-2"></span>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="NivelAmenaza" class="form-check-input" type="radio" name="NivelAmenaza" id="nivel2" value="2">
                                                <label asp-for="NivelAmenaza" class="form-check-label" for="nivel2">2 - Bajo</label>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="me-2"></span>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="NivelAmenaza" class="form-check-input" type="radio" name="NivelAmenaza" id="nivel3" value="3">
                                                <label asp-for="NivelAmenaza" class="form-check-label" for="nivel3">3 - Medio</label>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="me-2"></span>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="NivelAmenaza" class="form-check-input" type="radio" name="NivelAmenaza" id="nivel4" value="4">
                                                <label asp-for="NivelAmenaza" class="form-check-label" for="nivel4">4 - Alto</label>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="me-2"></span>
                                            <div class="form-check form-check-inline">
                                                <input asp-for="NivelAmenaza" class="form-check-input" type="radio" name="NivelAmenaza" id="nivel5" value="5">
                                                <label asp-for="NivelAmenaza" class="form-check-label" for="nivel5">5 - Muy Alto</label>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="NivelAmenaza" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Segunda Columna -->
                            <div class="col-md-6">

                                <!--estado riesgo-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="EstadoRiesgo" class="form-label">Estado del Riesgo</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-exclamation-circle text-muted"></i></span>
                                        <select asp-for="EstadoRiesgo" class="form-control rounded-end">
                                            <option value="" disabled selected>Seleccione el estado actual del riesgo.</option>
                                            <option value="1">Nuevo</option>
                                            <option value="2">Activo</option>
                                            <option value="3">Pendiente de evaluación</option>
                                            <option value="4">En proceso de solución</option>
                                            <option value="5">Mitigado</option>
                                            <option value="6">Riesgoso</option>
                                            <option value="7">Peligroso</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="EstadoRiesgo" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="TipoRiesgo" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-bug"></i></span>
                                        <select for="TipoRiesgo" id="tipoRiesgo" class="form-control rounded-end" onchange="mostrarSubOpciones()">
                                            <option value="" disabled selected>Seleccione un tipo de riesgo</option>
                                            <option value="naturales">Amenazas Naturales</option>
                                            <option value="humanas">Amenazas Humanas</option>
                                            <option value="tecnologicas">Amenazas Tecnológicas</option>
                                            <option value="organizativas">Amenazas Organizativas</option>
                                            <option value="externas">Amenazas Externas</option>
                                            <option value="internas">Amenazas Internas</option>
                                            <option value="entorno">Amenazas Relacionadas con el Entorno</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="TipoRiesgo" class="text-danger"></span>
                                </div>

                                <div id="subOpcionesContainer" class="form-group mb-4" style="display:none;">
                                    <label for="subOpcion" class="form-label">Subopciones</label>
                                    <select id="subOpcion" class="form-control">
                                        <option value="">Seleccione una subopción</option>
                                    </select>
                                </div>

                                <input type="hidden" id="campoRiesgoCompleto" name="TipoRiesgo" /> <!-- Aquí se guarda el valor combinado -->

                                <!--impacto-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="Impacto" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-graph-up"></i></span>
                                        <select asp-for="Impacto" class="form-control" name="impacto">
                                            <option value="" disabled selected>Seleccione impacto.</option>
                                            <option value="0">nulo (0) - Irrelevante a efectos prácticos</option>
                                            <option value="1">Bajo (1) - Daño menor</option>
                                            <option value="2">Bajo (2) - Daño menor</option>
                                            <option value="3">Medio (3) - Daño importante</option>
                                            <option value="4">Medio (4) - Daño importante</option>
                                            <option value="5">Medio (5) - Daño importante</option>
                                            <option value="6">Alto (6) - Daño grave</option>
                                            <option value="7">Alto (7) - Daño grave</option>
                                            <option value="8">Alto (8) - Daño grave</option>
                                            <option value="9">Muy alto (9) - Daño muy grave</option>
                                            <option value="10">Extremo (10) - Daño extremadamente grave</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Impacto" class="text-danger"></span>
                                </div>
                                
                                <!--municipalidad-->
                                <div class="form-group mb-4 position-relative">
                                    <label asp-for="AreaMunicipalidad" class="form-label fw-bold">Municipalidad <i class="bi bi-house"></i></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-house"></i></span>
                                        <select asp-for="AreaMunicipalidad" class="form-select" asp-items="ViewBag.AreaMunicipalidad">
                                            <option value="" disabled selected>Selecciona una municipalidad</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="AreaMunicipalidad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!--botones-->
                        <div class="text-center mt-4">
                            <button type="submit" value="Crear Registro" class="btn btn-success btn-lg me-2"
                                    onclick="return confirm('Por favor, revise los datos ingresados. Si son correctos, haga clic en Aceptar para guardarlos. Si necesita hacer cambios, haga clic en Cancelar.');">
                                <i class="fas fa-check-circle me-1"></i> Crear Registro
                            </button>

                            <a asp-action="Index"
                               class="btn btn-secondary btn-lg"
                               onclick="return confirm('¿Estás seguro de que deseas volver a la lista?');">
                                <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="back-to-home-container">
    <a asp-controller="Home" asp-action="Index" class="btn-custom">
        <i class="fas fa-home align-content-center"></i> volver a inicio
    </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
