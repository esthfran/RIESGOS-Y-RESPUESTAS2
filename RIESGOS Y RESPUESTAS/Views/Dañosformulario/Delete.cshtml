@model RIESGOS_Y_RESPUESTAS.Models.Dañosformulario

@{
    ViewData["Title"] = "Delete";
}
<div>
    <!-- Título principal de la página -->
    <h1 class="text-danger text-center"><i class="fas fa-trash-alt"></i> Eliminar Registro - daños</h1>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="card shadow-lg rounded-4 border-0">
            <!-- Pregunta de confirmación para el usuario -->
            <h3 class="mb-4">¿Seguro que desea eliminar los datos seleccionados?</h3>
            <div>
                <!-- Título de la sección que muestra los detalles del registro -->
                <h4>Dañosformulario</h4>
                <hr />
                <!-- Lista de descripción para mostrar los detalles del registro -->
                <dl class="row">
                    <dt class="col-sm-2">Áreas Afectadas</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.AreasAfectadas)</dd>

                    <dt class="col-sm-2">Valor de Daños</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ValorDaños)</dd>

                    <dt class="col-sm-2">Respuesta</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Respuesta)</dd>

                    <dt class="col-sm-2">Estado del Daño</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.EstadoDaño)</dd>

                    <dt class="col-sm-2">ID de Activos</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ActivosNavigation.Idactivos)</dd>
                </dl>

                <!-- Formulario para confirmar la eliminación -->
                <form method="post" asp-action="Delete">
                    <!-- Campo oculto para enviar el ID del registro a eliminar -->
                    <input type="hidden" asp-for="Iddañosimportantes" />
                    <div class="text-center">
                        <!-- Botón para enviar la solicitud de eliminación -->
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                        <!-- Enlace para regresar a la lista de registros -->
                        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

