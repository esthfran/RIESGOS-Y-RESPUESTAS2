@model RIESGOS_Y_RESPUESTAS.Models.Respuestum

@{
    ViewData["Title"] = "Create";
}

<div class="text-center container mt-4">
    <h1 class="text-center mt-4">Formulario Registro de Respuesta</h1>
</div>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Crear Nuevo Registro de Respuesta Inmediata</h2>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Campo Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre de la respuesta</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-exclamation-circle"></i></span>
                                <input asp-for="Nombre" class="form-control" placeholder="Introduce el nombre de la respuesta" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripción" class="form-label">Descripción</label>
                            <textarea asp-for="Descripción" class="form-control" rows="3" placeholder="Describe el riesgo en detalle"></textarea>
                            <span asp-validation-for="Descripción" class="text-danger"></span>
                        </div>

                        <!--porcentaje mitigación-->
                        <div class="mb-3">
                            <label asp-for="PorcentajeMtigación" class="form-label">Porcentaje de Mitigación</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-percent"></i></span>
                                <select asp-for="PorcentajeMtigación" class="form-control" asp-items="ViewBag.PorcentajeMitigacionOptions">
                                    <option value="">Seleccione un porcentaje de mitigación</option>
                                </select>
                            </div>
                            <span asp-validation-for="PorcentajeMtigación" class="text-danger"></span>
                        </div>

                        <!-- Campo Valor Mejoras Monetario -->
                        <div class="mb-3">
                            <label asp-for="ValorMejorasMonetario" class="form-label">Valor de Mejoras (Monetario)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="ValorMejorasMonetario" class="form-control" type="number" step="0.01" placeholder="Introduce el valor en moneda local" />
                            </div>
                            <span asp-validation-for="ValorMejorasMonetario" class="text-danger"></span>
                        </div>

                        <!-- Campo Tiempo de Respuesta -->
                        <div class="mb-3">
                            <label asp-for="TiempoRespuesta" class="form-label">Tiempo de Respuesta</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                <select asp-for="TiempoRespuesta" asp-items="ViewBag.TiempoRespuestaOptions" class="form-control">
                                    <option value="">Seleccione un tiempo de respuesta</option>
                                </select>
                            </div>
                            <span asp-validation-for="TiempoRespuesta" class="text-danger"></span>
                        </div>


                        <!-- Botón de Crear -->
                        <div class="text-center mt-4">
                            <button type="submit" onclick="return confirm('Por favor, revise los datos ingresados. Si son correctos, haga clic en Aceptar para guardarlos. Si necesita hacer cambios, haga clic en Cancelar.');" class="btn btn-success btn-lg me-2">
                                <i class="fas fa-plus"></i> Crear Registro
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg" onclick="return confirm('¿Estás seguro de que deseas volver a la lista?');">
                                <i class="fas fa-arrow-left"></i> Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="back-to-home-container">
    <a asp-controller="Home" asp-action="Index" class="btn-custom">
        <i class="fas fa-home align-content-center"></i> Volver a Inicio
    </a>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}