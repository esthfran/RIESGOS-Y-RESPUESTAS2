@model RIESGOS_Y_RESPUESTAS.Models.Respuestum

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center container mt-4">
    <h1 class="text-center mt-4">
        <i class="bi bi-pencil-fill"></i> Actualizar Respuesta
    </h1>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">
                        <i class="bi bi-file-earmark-text"></i> Formulario de Edición
                    </h2>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Idrespuesta" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-exclamation-circle"></i></span>
                                <input asp-for="Nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripción" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-info-circle text-muted"></i></span>
                                <textarea asp-for="Descripción" class="form-control" rows="3" placeholder="Describe el riesgo en detalle"></textarea>
                            </div>
                            <span asp-validation-for="Descripción" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PorcentajeMtigación" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-percent"></i></span>
                                <input asp-for="PorcentajeMtigación" class="form-control" type="number" step="0.01" />
                           </div>
                            <span asp-validation-for="PorcentajeMtigación" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ValorMejorasMonetario" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="ValorMejorasMonetario" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="ValorMejorasMonetario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TiempoRespuesta" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                <input asp-for="TiempoRespuesta" class="form-control" type="text" />
                            </div>
                            <span asp-validation-for="TiempoRespuesta" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <input type="submit" value="Guardar" class="btn btn-success btn-lg me-2"
                                   onclick="return confirm('Por favor, revise los datos ingresados. Si son correctos, haga clic en Aceptar para guardarlos. Si necesita hacer cambios, haga clic en Cancelar.');" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg"
                               onclick="return confirm('¿Estás seguro de que deseas volver a la lista?');">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="back-to-home-container">
    <a asp-controller="Home" asp-action="Index" class="btn-custom">
        <i class="fas fa-home align-content-center"></i> Volver a Inicio
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
